
/**
 * @fileoverview Firestore Security Rules for RunAndDeploy application.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model. Users can only read and write their own data.
 * Public data is generally read-only.
 *
 * Data Structure:
 * - /users/{userId}: Stores public user profile information.
 * - /sites/{siteId}: Stores all deployed sites. Access is scoped by userId.
 * - /feedbacks/{feedbackId}: Stores user feedback. Users can only write their own feedback.
 * - /gitapi/{apiId}: Stores the GitHub API token. Should only be readable by server functions.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile, and create/update it.
    match /users/{userId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == userId;
      }
      
      allow get: if isOwner();
      allow list: if false; 

      allow create: if isOwner() && request.resource.data.id == userId;
      allow update: if isOwner() && request.resource.data.id == userId;
      allow delete: if false;
    }
    
    // Deployed sites are in a top-level collection.
    match /sites/{siteId} {
      function isSiteOwner() {
        return request.auth != null && resource.data.userId == request.auth.uid;
      }
      function isPublic() {
          return resource.data.isPublic == true;
      }

      // Allow reads if user owns the site, or if the site is public.
      allow get: if isSiteOwner() || isPublic();
      // Allow anyone to list public sites. Allow logged-in users to list their own sites.
      allow list: if request.query.get('isPublic') == 'true' || (request.auth != null && request.query.get('userId') == request.auth.uid);
      
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      allow update: if false;

      allow delete: if isSiteOwner();
    }
    
    // Feedback collection
    // Users can create feedback, but cannot read, update or delete any feedback (including their own).
    match /feedbacks/{feedbackId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read, update, delete: if false;
    }

    // GitHub API token storage
    // Should only be readable by a trusted server process.
    match /gitapi/{apiId} {
      allow get: if true; // Allows the server action to read the token.
      allow list, create, update, delete: if false; // Deny all writes from the client.
    }
  }
}
