
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read on the deployment counter
    match /app_state/{docId} {
      allow get: if true;
      allow list: if true;
      allow write: if false; // Disallow client-side writes
    }
    
    match /users/{userId} {
      // Anyone can read a user's public profile
      allow get: if true;
      // A user can create and update their own profile
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    match /sites/{siteId} {
      // Users can only read and write their own sites
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      // Users can only create sites for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /feedbacks/{feedbackId} {
        // feedbacks can be read by anyone
        allow get: if true;
        // Users can only write their own feedback
        allow create: if request.auth != null;
    }
  }
}
