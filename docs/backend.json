{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the RunAndDeploy application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user, matches Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "User's email address for login and communication.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "User's display name."
        }
      },
      "required": [
        "id",
        "email",
        "name"
      ]
    },
    "DeployedSite": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DeployedSite",
      "type": "object",
      "description": "Represents a link to a user's deployed code.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the deployed site document."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the User who created this link."
        },
        "projectName": {
          "type": "string",
          "description": "The name of the deployed project."
        },
        "url": {
          "type": "string",
          "description": "The URL where the code is deployed.",
          "format": "uri"
        },
        "deployedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the site was deployed."
        },
        "isPublic": {
          "type": "boolean",
          "description": "Whether the site is publicly visible in the showcase."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the preview image for the showcase."
        },
        "likes": {
          "type": "number",
          "description": "The number of likes the site has received."
        }
      },
      "required": [
        "userId",
        "projectName",
        "url",
        "deployedAt",
        "isPublic"
      ]
    },
    "Feedback": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Feedback",
      "type": "object",
      "description": "Represents user feedback for a deployed site.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user providing the feedback."
        },
        "projectName": {
          "type": "string",
          "description": "The name of the project the feedback is for."
        },
        "rating": {
          "type": "number",
          "description": "A star rating from 1 to 5.",
          "minimum": 1,
          "maximum": 5
        },
        "comment": {
          "type": "string",
          "description": "An optional text comment from the user."
        },
        "submittedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the feedback was submitted."
        }
      },
      "required": [
        "userId",
        "projectName",
        "rating",
        "submittedAt"
      ]
    },
    "GitApi": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GitApi",
      "type": "object",
      "description": "Stores the GitHub API token.",
      "properties": {
        "token": {
          "type": "string",
          "description": "The GitHub Personal Access Token."
        }
      },
      "required": ["token"]
    },
    "Like": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Like",
      "description": "Represents a user's like on a specific site.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who liked the site."
        },
        "siteId": {
          "type": "string",
          "description": "The ID of the site that was liked."
        }
      },
      "required": ["userId", "siteId"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profile information."
        }
      },
      {
        "path": "/sites/{siteId}",
        "definition": {
          "entityName": "DeployedSite",
          "schema": {
            "$ref": "#/backend/entities/DeployedSite"
          },
          "description": "Stores all deployed site links. Access is controlled by userId."
        }
      },
      {
        "path": "/feedbacks/{feedbackId}",
        "definition": {
          "entityName": "Feedback",
          "schema": {
            "$ref": "#/backend/entities/Feedback"
          },
          "description": "Stores user feedback for deployments."
        }
      },
      {
        "path": "/gitapi/{apiId}",
        "definition": {
          "entityName": "GitApi",
          "schema": {
            "$ref": "#/backend/entities/GitApi"
          },
          "description": "Stores the GitHub API key. Should be read-only for server-side processes."
        }
      },
      {
        "path": "/likes/{likeId}",
        "definition": {
          "entityName": "Like",
          "schema": {
            "$ref": "#/backend/entities/Like"
          },
          "description": "Stores a record of a user liking a site to prevent duplicate likes."
        }
      }
    ]
  }
}
